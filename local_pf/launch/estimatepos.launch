<launch>
    <?ignore ------------------------------------------------------ Start Initializing Parameters -------------------------------------- ?>

    <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
    <arg name="x_pos" default="-2.0"/>
    <arg name="y_pos" default="-0.5"/>
    <arg name="z_pos" default="0.0"/>
    <?ignore--------------------------------------------------------End of Initialization Parameters ---------------------------------------- ?>


    <?ignore-------------------------------------------------------- Gazebo start ---------------------------------------

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
      <arg name="world_name" value="$(find turtlebot3_gazebo)/worlds/turtlebot3_world.world"/>
      <arg name="paused" value="false"/>
      <arg name="use_sim_time" value="true"/>
      <arg name="gui" value="true"/>
      <arg name="headless" value="false"/>
      <arg name="debug" value="false"/>
    </include>

    <param name="robot_description" command="$(find xacro)/xacro --inorder $(find turtlebot3_description)/urdf/turtlebot3_$(arg model).urdf.xacro" />

    <node pkg="gazebo_ros" type="spawn_model" name="spawn_urdf"  args="-urdf -model turtlebot3_$(arg model) -x $(arg x_pos) -y $(arg y_pos) -z $(arg z_pos) -param robot_description" />

    ------------------------------------------------------- Gazebo End  ----------------------------------------?>


    <?ignore-------------------------------------------------------- Start Transformers ----------------------------------------?>


    <node pkg="tf" type="static_transform_publisher" name="map_to_odom" args="0 0 0 0 0 0 map odom 30" />

    <node pkg="tf" type="static_transform_publisher" name="base_footprint_to_base_link" args="0 0 0 0 0 0 base_footprint base_link 30" />
    <node pkg="tf" type="static_transform_publisher" name="base_link_to_base_scan" args="-0.03 0 0 0 0 0 base_link base_scan 30" />
    <?ignore-------------------------------------------------------- End of Transformers ----------------------------------------?>

    <?ignore-------------------------------------------------------- Start nodes ----------------------------------------?>

    <?ignore <node pkg="mor_createmap" type="pubmap" name="pubmap" output="screen"/> ?>
    <node pkg="local_pf" type="main" name="main" output="screen"/>


    <?ignore-------------------------------------------------------- End of nodes ----------------------------------------?>

    <?ignore-------------------------------------------------------- Start launch files ----------------------------------------?>



    <?ignore-------------------------------------------------------- End launch files ----------------------------------------?>

    <?ignore-------------------------------------------------------- RVIZ start ----------------------------------------?>
        <node pkg="rviz" type="rviz" name="rviz" required="true"
              args="-d $(find local_pf)/rviz/estimatepos.rviz"/>
    <?ignore-------------------------------------------------------- RVIZ end ----------------------------------------?>

</launch>
